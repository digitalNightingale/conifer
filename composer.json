{
    "name": "sitecrafting/conifer",
    "description": "Powerful abstractions for serious WordPress theme development",
    "type": "wordpress-plugin",
    "repositories": [
        {
            "type": "vcs",
            "url": "git@github.com:sitecrafting/groot.git"
        },
        {
            "type": "composer",
            "url": "https://wpackagist.org"
        }
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Coby Tamayo",
            "email": "ctamayo@sitecrafting.com"
        }
    ],
    "minimum-stability": "dev",
    "require": {
        "php": ">=7.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^6.0",
        "behat/behat": "^3.4",
        "johnpbloch/wordpress-core-installer": "^1.0",
        "johnpbloch/wordpress-core": "^4.9",
        "mnsami/composer-custom-directory-installer": "^1.1",
        "wpackagist-plugin/timber-library": "^1.7",
        "sitecrafting/groot": "dev-master"
    },
    "extra": {
        "wordpress-install-dir": {
            "johnpbloch/wordpress-core": "wp"
        },
        "installer-paths": {
            "wp/wp-content/plugins/{$name}/": [
                "wpackagist-plugin/timber-library"
            ],
            "wp/wp-content/themes/groot": [
                "sitecrafting/groot"
            ]
        }
    },
    "autoload": {
        "psr-4": {
            "Conifer\\": "lib/Conifer/"
        }
    }
}
